# Asks the user for their height and weight then calculates and outputs their BMI

.data
bmi:        .float  0
height:     .float  0
weight:     .float  0
.align 6
multiplier: .float 703
name:       .asciiz ""
nameMsg:    .asciiz "What is your name? "
heightMsg:  .asciiz "Please enter your height in inches: "
weightMsg:  .asciiz "Now enter your weight in pounds (round to a whole number): "

.text
main:
	#Prompt the user to enter their name
	li $v0, 4
	la $a0, nameMsg
	syscall
	
	#Stores the user's name
	li $v0, 8
	la $a0, name
	li $a1, 20
	syscall
	
	#Prompt the user to enter their height
	li $v0, 4
	la $a0, heightMsg
	syscall
	
	#Stores the user's height
	li $v0, 6
	syscall
	
	mov.d $f0, $f2
	
	#Prompt the user to enter their weight
	li $v0, 4
	la $a0, weightMsg
	syscall
	
	#Stores the user's weight
	li $v0, 6
	syscall
	
	#s.d $f0, weight
	
	#multiplies the weight by 703
	#l.d $f0, weight
	l.d $f4, multiplier
	#li $a2, 703
	#mult $a1, $a2
	#mflo $a0
	#sw $a0, weight
	mul.d $f0, $f0, $f4
	
	#squares the height
	l.d $f2, height
	#mult $a1, $a1
	#mflo $a0
	#sw $a0, height
	mul.d $f2, $f2, $f2
	
	#divides the weight by the height after converting them to floating point values
	#lw $a1, weight
	#mtc1.d $a1, $f2
	#cvt.d.w $f2, $f2
	#mov.d $f12, $f2
	#li $v0, 2
	#syscall
	
	#lw $a2, height
	#mtc1.d $a2, $f4
	#cvt.d.w $f4, $f4
	#mov.d $f12, $f4
	#li $v0, 2
	#syscall
	
	div.d $f12 $f0, $f2
	s.d $f12, bmi
	
	#prints out name
	li $v0, 4
	la $a0, name
	syscall
	
	#prints out bmi
	li $v0, 2
	l.d $f12, bmi
	syscall
	
exit:
	#exit program
	li $v0, 10
	syscall
